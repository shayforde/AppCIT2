<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttViewCitBlackboard"
        android:id="@+id/buttViewCITBlackboard"
        android:layout_gravity="center"
        android:layout_above="@+id/buttViewCITCardTopUp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttViewCitCardTopUp"
        android:id="@+id/buttViewCITCardTopUp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttViewCITBlackboard"
        android:layout_alignStart="@+id/buttViewCITBlackboard"
        android:layout_alignRight="@+id/buttViewCITBlackboard"
        android:layout_alignEnd="@+id/buttViewCITBlackboard" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttViewCitWebsite"
        android:id="@+id/buttViewCitWebsite"
        android:layout_marginTop="54dp"
        android:layout_gravity="center"
        android:layout_below="@+id/buttViewCITCardTopUp"
        android:layout_alignLeft="@+id/buttViewCITCardTopUp"
        android:layout_alignStart="@+id/buttViewCITCardTopUp"
        android:layout_alignRight="@+id/buttViewCITCardTopUp"
        android:layout_alignEnd="@+id/buttViewCITCardTopUp" />
</RelativeLayout>
